#version 430 core

layout (vertices = 4) out;

in vec2 texCoord[];

out vec2 TextureCoord[];

uniform mat4 uMVP;
uniform mat4 uView;
uniform mat4 uModel;

void main()
{
	gl_out[gl_InvocationID].gl_Position = gl_in[gl_InvocationID].gl_position;
	TextureCoord[gl_InvocationID] = texCoord[gl_InvocationID];
}